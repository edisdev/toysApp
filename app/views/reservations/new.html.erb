<%= form_with(model: [@toy,@res], local: true, class:"special-form") do |form| %>

  <div class="field">
    <%= form.label :reservasyon_notu %>
    <%= form.text_area :res_note , class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :reservasyon_başlangıç_tarihi %>
    <%= form.date_field :res_start_date , class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :reservasyon_bitiş_tarihi %>
    <%= form.date_field :res_finish_date, class:"form-control" %>
  </div>



  <div class="actions" style="margin-top:2%">
    <%= form.submit "Oyuncağı Rezerve Et", class:"btn btn-success" %>
  </div>
<% end %>
