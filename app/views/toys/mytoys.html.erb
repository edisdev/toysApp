<div class="py-4">
<div class="row justify-content-md-center">
  <% @toys.each do |toy| %>
  <div class="col-md-3">
    <%=  link_to toy_path(toy) do %>
    <%= image_tag toy.image_url.to_s , class:"toys_image" %>
    <% end %>
    <div class="toys_link">
      <%=  link_to toy_path(toy) do %>
        <%= toy.name %>
      <% end %>
    <%= link_to "Düzenle", edit_toy_path(toy) %>
    <%= link_to 'Sil', toy , method: :delete, data: { confirm: 'Oyuncağı Sİlmek İstediğinize Emin Misiniz ? ' } %>
  </div>
    </div>
  <% end %>
</div>
</div>
